<div class="login-container">

<h2 class="login-header">Login</h2>

<div class="container d-flex align-items-center">
<form class="form-horizontal login-form">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label email">Email:</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail3" style="width: 290px" placeholder="Email">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label password">Password:</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" style="width: 290px" id="inputPassword3" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn custom-button login">Log in</button>
    </div>
  </div>
  <div class="form-group">
    <div class="account">
      <h6 class="inline-text">Don't have an account?</h6>
      <a href="/register"class="inline-link">Sign Up Here!</a>
    </div>
  </div>
</form>
</div>


</div>

<script src="/js/login.js"></script>